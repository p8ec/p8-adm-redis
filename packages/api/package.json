{
  "name": "p8-mcn-service",
  "version": "0.0.1",
  "description": "P(8) Multi-Channel Notification Service",
  "author": "P8 Enterprise Components, Inc",
  "private": true,
  "license": "PRIVATE",
  "engines": {
    "node": ">=20",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev:start": "nest start --watch",
    "dev:debug": "nest start --debug --watch",
    "dev:lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typeorm:cli": "ts-node node_modules/.bin/typeorm -d src/database/config/datasource.ts",
    "migration:generate": "src/database/scripts/migration-generate.sh",
    "migration:run": "npm run typeorm:cli -- migration:run",
    "migration:schema-drop": "npm run typeorm:cli -- schema:drop",
    "clean": "rm -rf dist",
    "start": "nest start",
    "build": "npm run clean && nest build --config tsconfig.build.json",
    "prod:start": "node dist/app.bootstrap",
    "prod:migration": "node dist/database/helpers/migrationsRunner.js",
    "ops:docker-build": "docker build -t ${PWD##*/} .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.9",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.9",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.3.9",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.9",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/throttler": "^5.1.2",
    "@nestjs/typeorm": "^10.0.2",
    "@p8ec/nestjs": "^0.1.2",
    "@types/supertest": "^6.0.2",
    "axios": "^1.7.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "ferramenta": "^1.3.0",
    "helmet": "^7.1.0",
    "joi": "^17.13.1",
    "kafkajs": "^2.2.4",
    "mustache": "^4.2.0",
    "otpauth": "^9.3.1",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.12.0",
    "redis": "^4.6.14",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.2.10",
    "@p8ec/shared": "^1.1.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "29.5.12",
    "@types/mustache": "^4.2.5",
    "@types/node": "20.12.13",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "jest": "29.7.0",
    "source-map-support": "^0.5.20",
    "supertest": "^7.0.0",
    "ts-jest": "29.1.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
